<div class="row pt-md-4">
<% if(item.image) { %>
  <div class="col-12 col-md-5 col-lg-4 offset-lg-1">
        <img class="img-fluid cover-image" src="<%- url_for(item.image) %>" alt="<%- item.name || "Untitled" %>">
  </div>
<% } %>
  <div class="col-12 col-md-6 offset-md-1 mt-5 mt-md-3">

    <div class="post-page text-center">
      <h1><%- item.name || "Untitled" %></h1>
      <% if (item.price) { %>
      <span class="price">$<%= item.price %></span>
      <% } %>
    </div>

    <%- item.content %>

    <% if (item.price) { %>
      <div class="buy-button text-center mt-4">
        <button class="snipcart-add-item"
          data-item-id="<%- item.id %>"
          data-item-name="<%- item.name %>"
          data-item-price="<%- item.price %>"
          data-item-image="<%- url_for(item.image) %>"
          data-item-url="<%- item.permalink %>">Add to Cart</button>
      </div>
    <% } %>

  </div>
</div>
